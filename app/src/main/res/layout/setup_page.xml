<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/BackGround_black"
            android:layout_width="739dp"
            android:layout_height="505dp"
            android:layout_centerInParent="true"
            android:background="#484848" />

        <TextView
            android:id="@+id/BackGround_green"
            android:layout_width="710dp"
            android:layout_height="480dp"
            android:layout_centerInParent="true"
            android:background="#1a9174" />

        <Button
            android:id="@+id/Confirm_Button"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Car_Number"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="141dp"
            android:text="확인"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Text_Stopbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="449dp"
            android:layout_marginTop="120dp"
            android:text=" STOP BUS"
            android:textColor="#e0ffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Text_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Text_Stopbus"
            android:layout_marginEnd="452dp"
            android:text="for"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Text_BusDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Text_Stopbus"
            android:layout_centerHorizontal="true"
            android:text="BUS DRIVER"
            android:textColor="@android:color/background_light"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Car_Number"
            android:layout_width="518dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="222dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="text"
            android:text="차량 번호"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/bus_ID"
            android:layout_width="518dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="274dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:text="버스 ID"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Text_Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="192dp"
            android:text="버스 정보를 입력해주세요"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="206dp"
            android:layout_height="148dp"
            android:layout_centerInParent="true"
            tools:visibility="invisible" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>