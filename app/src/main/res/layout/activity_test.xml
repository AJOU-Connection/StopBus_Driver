<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Bottom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#4a4a4b" />

        <TextView
            android:id="@+id/Top"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#4a4a4b" />

        <TextView
            android:id="@+id/MyCar"
            android:layout_width="448dp"
            android:layout_height="376dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/Fix_CurrentStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/MyCar"
            android:layout_centerHorizontal="true"
            android:text="@string/현재위치"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/Fix_NextStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CurrentStation_WhiteBox"
            android:layout_centerHorizontal="true"
            android:text="@string/다음위치"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/CurrentStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Fix_CurrentStation"
            android:layout_centerHorizontal="true"
            android:text="@string/CurrentStation"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NextStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CurrentStation"
            android:layout_centerHorizontal="true"
            android:text="@string/NextStation"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/CurrentStation_WhiteBox"
            android:layout_width="449dp"
            android:layout_height="246dp"
            android:layout_alignStart="@+id/MyCar"
            android:layout_centerVertical="true"
            android:background="@color/cardview_light_background" />

        <TextView
            android:id="@+id/NextStation_Buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/NextStationDirection"
            android:layout_centerHorizontal="true"
            android:text="@string/NextStationButtom"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NextStationDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/MyCar"
            android:layout_centerHorizontal="true"
            android:text="@string/NextStationDirection"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/RidePerson"
            android:layout_width="194dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="106dp"
            android:background="@android:color/holo_orange_light"
            android:text="탈 사람이 있습니다."
            android:textAlignment="center" />

        <TextView
            android:id="@+id/GetOffPerson"
            android:layout_width="193dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="95dp"
            android:background="@android:color/holo_blue_light"
            android:text="내릴 사람이 있습니다."
            android:textAlignment="center" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>